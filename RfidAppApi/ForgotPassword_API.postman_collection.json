{
	"info": {
		"_postman_id": "forgot-password-api-collection",
		"name": "RFID App - Forgot Password API",
		"description": "Postman collection for Forgot Password and Reset Password APIs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Forgot Password",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.resetToken) {",
							"        // Store the reset token for use in reset password request",
							"        pm.environment.set('resetToken', jsonData.resetToken);",
							"        pm.environment.set('userEmail', pm.request.body.urlencoded ? pm.request.body.urlencoded.get('email') : pm.request.body.raw ? JSON.parse(pm.request.body.raw).email : '');",
							"        console.log('Reset Token saved:', jsonData.resetToken);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"user@example.com\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/user/forgot-password",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"user",
						"forgot-password"
					]
				},
				"description": "Request a password reset token. The token will be sent via email (in production) or returned in the response (for testing)."
			},
			"response": []
		},
		{
			"name": "Reset Password",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Get token from environment variable (set by forgot password request)",
							"var token = pm.environment.get('resetToken');",
							"var email = pm.environment.get('userEmail');",
							"",
							"if (!token) {",
							"    console.log('Warning: resetToken not found in environment. Please run Forgot Password request first.');",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"token\": \"{{resetToken}}\",\n    \"email\": \"{{userEmail}}\",\n    \"newPassword\": \"NewPassword123!\",\n    \"confirmPassword\": \"NewPassword123!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/user/reset-password",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"user",
						"reset-password"
					]
				},
				"description": "Reset password using the token received from forgot password request. The token is valid for 24 hours."
			},
			"response": []
		},
		{
			"name": "Reset Password (Manual Token)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"token\": \"your-reset-token-here\",\n    \"email\": \"user@example.com\",\n    \"newPassword\": \"NewPassword123!\",\n    \"confirmPassword\": \"NewPassword123!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/user/reset-password",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"user",
						"reset-password"
					]
				},
				"description": "Reset password with manually entered token. Use this if you have the token from a previous forgot password request."
			},
			"response": []
		},
		{
			"name": "Login (After Reset)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"{{userEmail}}\",\n    \"password\": \"NewPassword123!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/user/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"user",
						"login"
					]
				},
				"description": "Login with the new password after successful password reset to verify the reset worked."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "https://localhost:7107",
			"type": "string"
		},
		{
			"key": "resetToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "userEmail",
			"value": "",
			"type": "string"
		}
	]
}

